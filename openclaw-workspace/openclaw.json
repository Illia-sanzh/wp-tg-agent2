{
  // OpenClaw Gateway configuration
  // Generated by install.sh â€” edit values directly or re-run install.sh
  //
  // LLM: Uses the openclaw-litellm proxy (OpenAI-compatible).
  // Replace LITELLM_MASTER_KEY_VALUE and ANTHROPIC_API_KEY_VALUE with real values,
  // or let install.sh substitute them automatically.

  "agents": {
    "defaults": {
      "model": "openai/claude-sonnet-4-6"
    }
  },

  "providers": {
    "openai": {
      "apiKey": "LITELLM_MASTER_KEY_VALUE",
      "baseUrl": "http://openclaw-litellm:4000/v1"
    }
  },

  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "TELEGRAM_BOT_TOKEN_VALUE",
      "dmPolicy": "allowlist",
      "allowFrom": ["tg:TELEGRAM_ADMIN_USER_ID_VALUE"],
      "streamMode": "partial",
      "textChunkLimit": 4000,
      "mediaMaxMb": 5
    }
  },

  "skills": {
    "entries": {
      "wordpress-manager": {
        "enabled": true
      }
    }
  },

  "gateway": {
    "bind": "lan",
    "port": 18789
  }
}
